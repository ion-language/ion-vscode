{
    "name": "ion-vscode",
    "displayName": "ion-vscode",
    "description": "Syntax highlighting for the Ion programming language",
    "version": "0.0.1",
    "icon": "images/ion_icon.png",
    "publisher": "RednibCoding",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/RednibCoding/ion-vscode"
    },
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ion",
                "aliases": [
                    "ion",
                    "ion"
                ],
                "extensions": [
                    ".ion"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ion",
                "scopeName": "source.ion",
                "path": "./syntaxes/ion.tmLanguage.json"
            }
        ]
    }
}